<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textNameSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя и Фамилия"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать дату рождения" />

    <TextView
        android:id="@+id/textBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата не выбрана"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonToScreenC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Перейти на экран C"
        android:layout_marginTop="16dp" />
</LinearLayout>
